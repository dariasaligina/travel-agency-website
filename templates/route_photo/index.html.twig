{% extends 'base.html.twig' %}

{% block title %}RoutePhoto index{% endblock %}

{% block stylesheets %}
{{include("tours/_style.css.twig")}}
{% endblock %}

{% block body %}
<div class="admin-menu-container">
    <h1>Фото маршрута</h1>

    <table class="styled-table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Адрес фото</th>
                <th>Фото</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
        {% for route_photo in route_photos %}
            <tr>
                <td>{{ route_photo.id }}</td>
                <td>{{ route_photo.photo }}</td>
<td><img src="{{ asset('images/' ~ route_photo.photo) }}" alt="Tour Image" style="height: 50px;"></td>
                <td>
                    <a href="{{ path('app_route_photo_show', {'id': route_photo.id}) }}">Показать</a>
                    <a href="{{ path('app_route_photo_edit', {'id': route_photo.id}) }}">Редактировать</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Записи не найдены</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_route_photo_new') }}">Создать новый</a>
    </div>
{% endblock %}
