{% extends 'base.html.twig' %}

{% block title %}Route{% endblock %}

{% block stylesheets %}
{{include("tours/_style.css.twig")}}
{% endblock %}

{% block body %}
<div class="admin-menu-container">
    <h1>Route</h1>

    <table class="styled-table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ route.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ route.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ route.description }}</td>
            </tr>
            <tr>
                <th>Program</th>
                <td>{{ route.program }}</td>
            </tr>
            <tr>
                <th>Additional_info</th>
                <td>{{ route.additionalInfo }}</td>
            </tr>
            <tr>
                <th>Duration</th>
                <td>{{ route.duration }}</td>
            </tr>
            <tr>
                <th>Route_span</th>
                <td>{{ route.routeSpan ? route.routeSpan.format('%y year(s), %m month(s), %d day(s)') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_route_index') }}">back to list</a>

    <a href="{{ path('app_route_edit', {'id': route.id}) }}">edit</a>

    {{ include('route/_delete_form.html.twig') }}
    </div>
{% endblock %}
