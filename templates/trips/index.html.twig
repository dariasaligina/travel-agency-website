{% extends 'base.html.twig' %}

{% block title %}Trips index{% endblock %}

{% block body %}
    <h1>Trips index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Trip_span</th>
                <th>Price</th>
                <th>Spots_number</th>
                <th>Start_date</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for trip in trips %}
            <tr>
                <td>{{ trip.id }}</td>
                <td>{{ trip.tripSpan ? trip.tripSpan.format('%y year(s), %m month(s), %d day(s)') : '' }}</td>
                <td>{{ trip.price }}</td>
                <td>{{ trip.spotsNumber }}</td>
                <td>{{ trip.startDate ? trip.startDate|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('app_trips_show', {'id': trip.id}) }}">show</a>
                    <a href="{{ path('app_trips_edit', {'id': trip.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_trips_new') }}">Create new</a>
{% endblock %}
