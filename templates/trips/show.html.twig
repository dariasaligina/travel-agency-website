{% extends 'base.html.twig' %}

{% block title %}Trips{% endblock %}

{% block body %}
    <h1>Trips</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ trip.id }}</td>
            </tr>
            <tr>
                <th>Trip_span</th>
                <td>{{ trip.tripSpan ? trip.tripSpan.format('%y year(s), %m month(s), %d day(s)') : '' }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ trip.price }}</td>
            </tr>
            <tr>
                <th>Spots_number</th>
                <td>{{ trip.spotsNumber }}</td>
            </tr>
            <tr>
                <th>Start_date</th>
                <td>{{ trip.startDate ? trip.startDate|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_trips_index') }}">back to list</a>

    <a href="{{ path('app_trips_edit', {'id': trip.id}) }}">edit</a>

    {{ include('trips/_delete_form.html.twig') }}
{% endblock %}
