{% extends 'base.html.twig' %}

{% block title %}Trips{% endblock %}

{% block stylesheets %}
{{include("tours/_style.css.twig")}}
{% endblock %}

{% block body %}
<div class="admin-menu-container">
    <h1>Trips</h1>

    <table class="styled-table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ trip.id }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ trip.price }}</td>
            </tr>
            <tr>
                <th>Spots_number</th>
                <td>{{ trip.spotsNumber }}</td>
            </tr>
            <tr>
                <th>StartDate</th>
                <td>{{ trip.startDate ? trip.startDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_trips_index') }}">back to list</a>

    <a href="{{ path('app_trips_edit', {'id': trip.id}) }}">edit</a>

    {{ include('trips/_delete_form.html.twig') }}
    </div>
{% endblock %}
